{
  "name": "library-manager",
  "version": "0.0.0",
  "description": "A simple library manager app that add, updates and deletes books",
  "main": "index.js",
  "scripts": {
    "server": "node app.js",
    "proxy": "delay 3 && browser-sync start --proxy localhost:3000 --files ./views/*.pug ./public/stylesheets/*.css ./public/js/bundle.js",
    "bundle": "browserify ./public/js/app.js > ./public/js/bundle.js",
    "watch": "onchange ./public/js/app.js -- npm run bundle",
    "vim": "vim app.js routes/*.js views/**/*.pug views/*pug public/js/*.js",
    "start": "npm-run-all --sequential bundle --parallel server proxy watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Michael Braga",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "browserify": "^16.2.3",
    "csso": "^3.5.1",
    "delay-cli": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "indexes-of": "^1.0.1",
    "is-number": "^7.0.0",
    "morgan": "^1.9.1",
    "pug": "^2.0.3",
    "ramda": "^0.26.1",
    "rxjs": "^6.3.3",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "sqlite3": "^4.0.6"
  }
}
